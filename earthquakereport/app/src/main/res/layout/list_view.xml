<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mag"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:background="@drawable/magnitude_circle"
        android:gravity="center"
        android:text="5.0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:fontFamily="sans-serif-condensed" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="clip_vertical"
        android:layout_marginLeft="14dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom|start|center_vertical"
            android:text="near to"
            android:textColor="@color/textColorEarthquakeLocation"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/city2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fontFamily="sans-serif-black"
            android:gravity="start|top|center_vertical"
            android:text="Sihora jabalpur mp"
            android:textColor="@color/textColorEarthquakeLocation"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="26 july 2021"
        android:textAlignment="center"
        android:textColor="#767C83"
        android:textSize="12sp" />
</LinearLayout>